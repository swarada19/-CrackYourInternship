class Solution {
    public int[] twoSum(int[] nums, int target) {
        HashMap<Integer, Integer> mp = new HashMap<>();
        for(int i=0; i<nums.length; i++){
            int n = nums[i];
            int more = target-n;
            if(mp.containsKey(more)){
                return new int[]{mp.get(more),i};
            }
            mp.put(n,i);
        }
        return new int[0];
    }
}
